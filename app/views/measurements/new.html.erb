<%= render 'homes/sidebar' %>

<div class="main-record">
  
<%= form_with(model:@measurement, method: :post, local: true) do |f| %>
    <h4>日付
      <%= f.date_field :date %>
       時間帯
      <%= f.select :timezone, ['morning', 'daytime', 'night', 'other'], {include_blank: '---'} %>
      測定値
      <%= f.text_field :value  , id: "value"%>mg/dl
    </h4>
      <%= f.submit 'save' , id: "submit" %>
  <% end %>

<div id="list">
</div>

 
</div>
